<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow-sm border-0">
        <div class="card-body p-4 p-lg-5">
          <div class="text-center mb-4">
            <h1 class="h3 mb-3 fw-bold text-success">
              <i class="fas fa-utensils me-2"></i> FoodKiosk
            </h1>
            <p class="text-muted">Maak een nieuw account aan</p>
          </div>

          <% if (locals.error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <i class="bi bi-exclamation-triangle me-2"></i>
              <%= error %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% } %>

          <form action="/auth/register" method="POST">
            <div class="mb-3">
              <label class="form-label" for="name">Naam</label>
              <div class="input-group">
                <span class="input-group-text bg-light">
                  <i class="bi bi-person text-muted"></i>
                </span>
                <input type="text" class="form-control" id="name" name="name" placeholder="Volledige naam" required>
              </div>
            </div>
            
            <div class="mb-3">
              <label class="form-label" for="email">E-mailadres</label>
              <div class="input-group">
                <span class="input-group-text bg-light">
                  <i class="bi bi-envelope text-muted"></i>
                </span>
                <input type="email" class="form-control" id="email" name="email" placeholder="naam@voorbeeld.nl" required>
              </div>
            </div>
            
            <div class="mb-4">
              <label class="form-label" for="password">Wachtwoord</label>
              <div class="input-group">
                <span class="input-group-text bg-light">
                  <i class="bi bi-lock text-muted"></i>
                </span>
                <input type="password" class="form-control" id="password" name="password" placeholder="Minimaal 8 tekens" required minlength="8">
              </div>
              <div class="form-text">Wachtwoord moet minimaal 8 tekens bevatten</div>
            </div>
            
            <div class="d-grid">
              <button class="btn btn-success btn-lg" type="submit">Registreren</button>
            </div>
          </form>
          
          <div class="text-center mt-4">
            <p class="text-muted">Heb je al een account? <a href="/auth/login" class="text-decoration-none text-success">Log in</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
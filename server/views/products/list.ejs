<div class="product-list">
  <% if (products && products.length > 0) { %>
    <% products.forEach(function(product) { %>
      <div class="product-item">
        <h3><%= product.name %></h3>
        <p class="price">â‚¬<%= product.price.toFixed(2) %></p>
        <% if (product.image_url) { %>
          <img src="<%= product.image_url %>" alt="<%= product.name %>" class="product-image">
        <% } else { %>
          <img src="/api/placeholder/100/100" alt="No image" class="product-image">
        <% } %>
        <p class="description"><%= product.description || 'Geen beschrijving beschikbaar' %></p>
        <div class="product-status">
          Voorraad: <%= product.stock !== undefined ? product.stock : 'N/A' %>
        </div>
        <div class="product-actions">
          <a href="/products/edit/<%= product.id %>" class="btn btn-sm btn-primary">Bewerken</a>
          <button class="btn btn-sm btn-danger" onclick="deleteProduct(<%= product.id %>)">Verwijderen</button>
        </div>
      </div>
    <% }); %>
  <% } else { %>
    <p class="no-products">Geen producten gevonden.</p>
  <% } %>
</div>
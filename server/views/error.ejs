<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card border-danger">
        <div class="card-header bg-danger text-white">
          <h4 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Fout</h4>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= message %></h5>
          <% if (process.env.NODE_ENV === 'development') { %>
            <div class="mt-3">
              <h6>Details:</h6>
              <pre class="bg-light p-3 rounded"><code><%= JSON.stringify(error, null, 2) %></code></pre>
            </div>
            <% if (error.stack) { %>
              <div class="mt-3">
                <h6>Stack:</h6>
                <pre class="bg-light p-3 rounded"><code><%= error.stack %></code></pre>
              </div>
            <% } %>
          <% } %>
          <div class="mt-4">
            <a href="<%= locals.isAuthenticated ? '/dashboard' : '/' %>" class="btn btn-primary">
              <i class="bi bi-house-door me-1"></i> Ga naar Home
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
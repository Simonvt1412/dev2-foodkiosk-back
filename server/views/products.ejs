<!-- Producten Overzicht and Product Form from index.ejs -->
<div id="products">
  <h1 class="mb-4">Producten Overzicht</h1>
  <!-- Portion Size Table -->
  <h4 class="mt-4 text-decoration-underline">Portion Size</h4>
  <div class="table-responsive">
    <table id="portion-table" class="table table-striped table-sm">
      <thead>
        <tr>
          <th>Afbeelding</th>
          <th>Naam</th>
          <th>Prijs</th>
          <th>Voorraad</th>
          <th>Status</th>
          <th>Acties</th>
        </tr>
      </thead>
      <tbody></tbody>
    </table>
  </div>
  <!-- Pasta Type Table -->
  <h4 class="mt-4 text-decoration-underline">Pasta Type</h4>
  <div class="table-responsive">
    <table id="pasta-table" class="table table-striped table-sm">
      <thead>
        <tr>
          <th>Afbeelding</th>
          <th>Naam</th>
          <th>Prijs</th>
          <th>Voorraad</th>
          <th>Status</th>
          <th>Acties</th>
        </tr>
      </thead>
      <tbody></tbody>
    </table>
  </div>
  <!-- Sauce Table -->
  <h4 class="mt-4 text-decoration-underline">Sauce</h4>
  <div class="table-responsive">
    <table id="sauce-table" class="table table-striped table-sm">
      <thead>
        <tr>
          <th>Afbeelding</th>
          <th>Naam</th>
          <th>Prijs</th>
          <th>Voorraad</th>
          <th>Status</th>
          <th>Acties</th>
        </tr>
      </thead>
      <tbody></tbody>
    </table>
  </div>
  <!-- Extras Table -->
  <h4 class="mt-4 text-decoration-underline">Extras</h4>
  <div class="table-responsive">
    <table id="extras-table" class="table table-striped table-sm">
      <thead>
        <tr>
          <th>Afbeelding</th>
          <th>Naam</th>
          <th>Prijs</th>
          <th>Voorraad</th>
          <th>Status</th>
          <th>Acties</th>
        </tr>
      </thead>
      <tbody></tbody>
    </table>
  </div>
  <!-- Product Form -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Product Toevoegen/Bewerken</h1>
    <a class="btn btn-outline-secondary" href="/products">Terug naar Producten</a>
  </div>
  <div class="card">
    <div class="card-body">
      <form>
        <div class="row">
          <div class="col-md-6">
            <div class="mb-3">
              <label class="form-label" for="product-name">Naam Product</label>
              <input class="form-control" id="product-name" type="text" value="Classic Burger"/>
            </div>
            <div class="mb-3">
              <label class="form-label" for="product-category">Categorie</label>
              <select class="form-select" id="product-category">
                <option value="">Selecteer categorie</option>
                <option selected value="1">Burgers</option>
                <option value="2">Sides</option>
                <option value="3">Dranken</option>
                <option value="4">Desserts</option>
              </select>
            </div>
            <div class="mb-3">
              <label class="form-label" for="product-price">Prijs (â‚¬)</label>
              <input class="form-control" id="product-price" step="0.01" type="number" value="8.95"/>
            </div>
            <div class="mb-3">
              <label class="form-label" for="product-stock">Voorraad</label>
              <input class="form-control" id="product-stock" type="number" value="24"/>
            </div>
            <div class="mb-3 form-check">
              <input checked class="form-check-input" id="product-available" type="checkbox"/>
              <label class="form-check-label" for="product-available">Beschikbaar voor verkoop</label>
            </div>
          </div>
          <div class="col-md-6">
            <div class="mb-3">
              <label class="form-label" for="product-description">Beschrijving</label>
              <textarea class="form-control" id="product-description" rows="3">Klassieke hamburger met sla, tomaat, ui en onze speciale saus.</textarea>
            </div>
            <div class="mb-3">
              <label class="form-label" for="product-image">Afbeelding</label>
              <input class="form-control" id="product-image" type="file"/>
              <div class="mt-2">
                <img alt="Product afbeelding" class="img-thumbnail" src="/api/placeholder/150/150"/>
              </div>
            </div>
          </div>
        </div>
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
          <button class="btn btn-outline-secondary me-md-2" type="button">Annuleren</button>
          <button class="btn btn-primary" type="submit">Opslaan</button>
        </div>
      </form>
    </div>
  </div>
</div> 
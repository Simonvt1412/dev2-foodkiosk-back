<div class="container-fluid p-0">
  <!-- Page Header -->
  <div class="page-header">
    <div class="d-flex justify-content-between align-items-center mb-2">
      <h1><i class="fas fa-puzzle-piece text-success me-2"></i>Pasta Combinaties</h1>
      <a class="btn btn-outline-secondary" href="/categories">
        <i class="fas fa-arrow-left me-2"></i> Terug naar CategorieÃ«n
      </a>
    </div>
    <p class="text-muted">Populaire combinaties van pasta, sauzen en extras</p>
  </div>

  <div class="card border-0 shadow-sm">
    <div class="card-body">
      <% if (combinations && combinations.length > 0) { %>
        <div class="table-responsive">
          <table class="table table-hover">
            <thead class="table-light">
              <tr>
                <th>Combinatie</th>
                <th>Aantal keren besteld</th>
                <th>Gemiddelde waarde</th>
              </tr>
            </thead>
            <tbody>
              <% combinations.forEach(function(combo) { %>
                <tr>
                  <td>
                    <strong><%= combo.products.join(' + ') %></strong>
                  </td>
                  <td><%= combo.count %></td>
                  <td>â‚¬<%= combo.avgValue.toFixed(2) %></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="text-center py-5">
          <i class="fas fa-chart-bar text-muted mb-3" style="font-size: 3rem;"></i>
          <h4 class="text-muted">Geen combinaties gevonden</h4>
          <p class="text-muted">Er zijn nog niet genoeg bestellingen om populaire combinaties te tonen</p>
        </div>
      <% } %>
    </div>
  </div>
</div>
function fillProductTable(products, type, tableId) {
    const tbody = document.querySelector(`#${tableId} tbody`);
    if (!tbody) return;
    tbody.innerHTML = '';
    products
        .filter(p => p.type === type)
        .forEach(product => {
            tbody.innerHTML += `
                <tr>
                    <td><img src="${product.image_url || '/api/placeholder/50/50'}" class="food-img" alt="${product.name}"></td>
                    <td>${product.name}</td>
                    <td>${
                        type === 'portion'
                            ? '€' + Number(product.price).toFixed(2)
                            : (product.price > 0 ? '+€' + Number(product.price).toFixed(2) : 'Inbegrepen')
                    }</td>
                    <td>${product.stock !== undefined && product.stock !== null ? product.stock : 'N/A'}</td>
                    <td><span class="badge bg-success">Beschikbaar</span></td>
                    <td>
                        <a class="btn btn-sm btn-outline-primary me-1" href="#product-form-${product.id}">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <button class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-trash"></i>
                        </button>
                    </td>
                </tr>
            `;
        });
}

function loadProducts() {
         console.log("loadProducts wordt aangeroepen!")
    fetch('/api/products')
        .then(res => res.json())
        .then(products => {
            fillProductTable(products, 'portion', 'portion-table');
            fillProductTable(products, 'pasta', 'pasta-table');
            fillProductTable(products, 'sauce', 'sauce-table');
            fillProductTable(products, 'extra', 'extras-table');
        })
        .catch(() => {
            ['portion-table', 'pasta-table', 'sauce-table', 'extras-table'].forEach(id => {
                const tbody = document.querySelector(`#${id} tbody`);
                if (tbody) tbody.innerHTML = '<tr><td colspan="6">Kan producten niet laden</td></tr>';
            });
        });
}

const productsLink = document.querySelector('.sidebar a[href="#products"]');
if (productsLink) {
    productsLink.addEventListener('click', loadProducts);
}

// Laad producten direct als het producten-tabblad zichtbaar is bij laden
if (window.location.hash === "#products" || document.getElementById('products').style.display !== 'none') {
    loadProducts();
}
});

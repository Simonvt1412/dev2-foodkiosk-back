/* Headings */
h1, h2, h3, h4, h5, h6 {
    font-family: 'Nunito', sans-serif;
    font-weight: 800; /* ExtraBold */
    color: #556B2F; /* Dark olive green */
}

/* Sidebar Adaptation */
.sidebar {
    background-color: #A0C078; /* A medium green */
    border-right: 3px solid #FFD700; /* Yellow border */
    min-height: 100vh; /* Kept from original */
}
.sidebar h4 {
    color: #FFFFFF;
}
.sidebar p {
    color: #F0F0D0; /* Lighter cream for subtext */
}
.sidebar a {
    color: #FFFFFF;
    font-weight: 700;
    border-radius: 20px;
    margin: 5px 10px;
    padding: 10px 15px; /* Kept from original */
    display: block; /* Kept from original */
    text-decoration: none; /* Kept from original */
}
.sidebar a:hover, .sidebar a.active {
    color: #556B2F; /* Dark olive green */
    background-color: #FFD700; /* Yellow */
    box-shadow: 0px 2px 5px rgba(0,0,0,0.2);
}
.sidebar hr {
    background-color: #FFD700 !important; /* Yellow */
}

/* Content Area */
.content-area {
    background-color: #FFFACD; /* Light beige/cream */
    padding: 20px; /* Kept from original */
}

/* Cards */
.card {
    background-color: #F0FFF0; /* Honeydew - a very light green/cream */
    border: 3px solid #FFD700; /* Yellow border */
    border-radius: 15px; /* Rounded corners */
    box-shadow: 0 0.15rem 1.75rem 0 rgba(85, 107, 47, 0.2); /* Dark olive shadow */
    margin-bottom: 20px; /* Kept from original */
}
.card-header {
    background-color: #90EE90; /* LightGreen */
    color: #556B2F; /* Dark olive green */
    border-bottom: 2px solid #FFD700; /* Yellow */
    border-top-left-radius: 12px; /* Match card's border-radius */
    border-top-right-radius: 12px;
}
.card-header h5 {
    color: #556B2F;
}

/* Stats Cards specific styling */
.stats-card {
    background-color: #F0FFF0; /* Honeydew */
    border-top: 3px solid #FFD700;
    border-right: 3px solid #FFD700;
    border-bottom: 3px solid #FFD700;

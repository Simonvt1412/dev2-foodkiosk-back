    font-weight: 700;
    text-transform: uppercase;
    border-radius: 50px; /* Pill shape */
    padding: 10px 20px;
    border: 3px solid #FFD700; /* Bright yellow border */
    color: #FFFFFF; /* White text */
    background: linear-gradient(to bottom, #8FBC8F, #6B8E23); /* DarkSeaGreen to OliveDrab gradient */
    box-shadow: 0px 3px 6px rgba(0,0,0,0.2);
    transition: all 0.3s ease;
}
.btn:hover {
    color: #FFFFFF;
    background: linear-gradient(to bottom, #6B8E23, #556B2F); /* Darker gradient on hover */
    border-color: #FFFF00; /* Brighter yellow on hover */
    box-shadow: 0px 5px 10px rgba(0,0,0,0.3);
    transform: translateY(-2px);
}

.btn-primary {
    background: linear-gradient(to bottom, #90EE90, #32CD32); /* LightGreen to LimeGreen */
    border-color: #FFD700;
    color: #556B2F; /* Dark text for lighter green */
}
.btn-primary:hover {
    background: linear-gradient(to bottom, #32CD32, #228B22); /* LimeGreen to ForestGreen */
    border-color: #FFFF00;
    color: #FFFFFF;
}

.btn-success {
    background: linear-gradient(to bottom, #98FB98, #3CB371); /* PaleGreen to MediumSeaGreen */
    border-color: #FFD700;
    color: #FFFFFF;
}
.btn-success:hover {
    background: linear-gradient(to bottom, #3CB371, #2E8B57); /* MediumSeaGreen to SeaGreen */
    border-color: #FFFF00;
}

.btn-outline-primary {
